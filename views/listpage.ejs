<!DOCTYPE html>
<html>
<head> <% include ./head %> </head>
<body>
<% include ./header %>

    <a class="btn" href="/additem">Add New Item</a>

    <div class="card">

    <table class="highlight">
        <tr>
            <th>Book</th><th>Author</th><th>Added By</th><th>Publisher</th><th>Genre</th><th>Rating</th><th>Url</th><th>Likes</th><th>Actions</th>
        </tr>

        <% items.forEach(function(item){  %>

        <tr>
            <td>
                <%=item.bookName%>
            </td>
            <td>
                <%=item.author%>
            </td>
            <td>
                <%=item.addedBy%>
            </td>
            <td>
                <%=item.publisher%>
            </td>
            <td>
                <%=item.genre%>
            </td>
            <td>
                <%=item.rating%>
            </td>
            <td>
                <%=item.url%>
            </td>
            <td>
                <i class="material-icons">thumb_up</i>
                <i class="material-icons">thumb_down</i>
            </td>
            <td>
                <i class="material-icons">delete</i>
            </td>
        </tr>



        <% }) %>
    </table>

    </div>

<% include ./footer %>
</body>
</html>
